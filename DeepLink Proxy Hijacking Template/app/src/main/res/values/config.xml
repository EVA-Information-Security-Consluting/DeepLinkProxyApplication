<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
    ═══════════════════════════════════════════════════════════════════════
    Deep Link Proxy Configuration
    ═══════════════════════════════════════════════════════════════════════
    
    STEP 1: Set your Burp Collaborator or webhook URL
    Examples:
    - https://YOUR-ID.oastify.com
    - https://webhook.site/YOUR-UUID
    - https://requestbin.com/YOUR-BIN
    -->
    <string name="server_url">https://YOUR-COLLABORATOR-ID.oastify.com</string>
    
    <!-- 
    STEP 2: Set the target app package name
    
    How to find it:
    adb shell pm list packages | grep YOUR_APP_NAME
    
    Examples:
    - com.instagram.android
    - com.spotify.music
    - com.example.targetapp
    -->
    <string name="target_package">com.example.targetapp</string>
    
    <!-- 
    STEP 3: Set the deep link scheme to intercept
    
    Examples:
    - instagram
    - spotify
    - myapp
    - targetapp
    
    Note: Must match the target app's deep link scheme exactly
    -->
    <string name="deep_link_scheme">myapp</string>
    
    <!-- 
    ═══════════════════════════════════════════════════════════════════════
    Optional Settings
    ═══════════════════════════════════════════════════════════════════════
    -->
    
    <!-- Delay before forwarding to real app (milliseconds) -->
    <integer name="forward_delay_ms">1000</integer>
    
    <!-- Enable/disable local file logging (backup) -->
    <bool name="enable_local_logging">true</bool>
    
    <!-- Show debug toast messages (set false for stealth mode) -->
    <bool name="show_debug_toasts">false</bool>
</resources>

